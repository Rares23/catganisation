<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>
    </style>

    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Toolbar" parent="AppTheme">
        <item name="titleTextColor">@color/colorWhite</item>
        <item name="iconTint">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>
    
    <style name="CardViewBreed" parent="AppTheme">
        <item name="cardCornerRadius">@dimen/cardRadius</item>
        <item name="backgroundColor">@color/colorLightWhite</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="android:layout_marginTop">@dimen/verticalHalfMargin</item>
        <item name="android:layout_marginStart">@dimen/horizontalMargin</item>
        <item name="android:layout_marginEnd">@dimen/horizontalMargin</item>
        <item name="android:layout_marginBottom">@dimen/verticalHalfMargin</item>
    </style>

    <style name="RecyclerViewBreedsList" parent="AppTheme">
        <item name="android:paddingTop">@dimen/verticalHalfMargin</item>
        <item name="android:paddingBottom">@dimen/verticalHalfMargin</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="ItemViewBreedImage" parent="AppTheme">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ItemViewBreedName" parent="AppTheme">
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/horizontalMargin</item>
        <item name="android:layout_marginTop">@dimen/verticalMargin</item>
        <item name="android:layout_marginEnd">@dimen/horizontalMargin</item>
    </style>

    <style name="ItemViewBreedDescription" parent="AppTheme">
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:textColor">@color/colorLightGray</item>
        <item name="android:layout_marginStart">@dimen/horizontalMargin</item>
        <item name="android:layout_marginBottom">@dimen/verticalMargin</item>
        <item name="android:layout_marginEnd">@dimen/horizontalMargin</item>
        <item name="android:lines">4</item>
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextViewNoBreedsLabel" parent="AppTheme">
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:layout_marginStart">@dimen/horizontalMargin</item>
        <item name="android:layout_marginEnd">@dimen/horizontalMargin</item>
    </style>

    <style name="ImageViewBreedDetailsImage" parent="AppTheme">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="TextViewBreedDetailsTitle" parent="AppTheme">
        <item name="android:textSize">@dimen/bigTextSize</item>
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/verticalDoubleMargin</item>
        <item name="android:layout_marginEnd">@dimen/horizontalMargin</item>
        <item name="android:layout_marginStart">@dimen/horizontalMargin</item>
    </style>

    <style name="TextViewBreedDetailsDescription" parent="AppTheme">
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:textColor">@color/colorLightGray</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">@dimen/verticalHalfMargin</item>
        <item name="android:layout_marginEnd">@dimen/horizontalMargin</item>
        <item name="android:layout_marginStart">@dimen/horizontalMargin</item>
    </style>

    <style name="ImageViewBreedDetailsInfoIcons" parent="AppTheme">
        <item name="android:layout_marginTop">@dimen/verticalDoubleMargin</item>
        <item name="tint">@color/colorLightGray</item>
    </style>

    <style name="TextViewBreedDetailsInfoText" parent="AppTheme">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorLightGray</item>
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:layout_marginTop">@dimen/verticalHalfMargin</item>
        <item name="android:layout_marginEnd">@dimen/horizontalMargin</item>
        <item name="android:layout_marginStart">@dimen/horizontalMargin</item>
        <item name="android:layout_marginBottom">@dimen/verticalDoubleMargin</item>
    </style>

    <style name="ExpandedTitleText" parent="AppTheme">
        <item name="android:textColor">@color/colorTransparent</item>
    </style>

    <style name="CollapsedTitleText" parent="AppTheme">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="FabSaveFilters" parent="AppTheme">
        <item name="android:layout_marginBottom">@dimen/verticalMargin</item>
        <item name="android:layout_marginEnd">@dimen/horizontalMargin</item>
        <item name="tint">@color/colorWhite</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:src">@drawable/ic_check</item>
    </style>

    <style name="FabResetFilters" parent="AppTheme">
        <item name="android:layout_marginBottom">@dimen/verticalMargin</item>
        <item name="android:layout_marginStart">@dimen/horizontalMargin</item>
        <item name="tint">@color/colorWhite</item>
        <item name="backgroundTint">@color/colorRed</item>
        <item name="android:src">@drawable/ic_reset</item>
    </style>

    <style name="TextViewCountryLabel" parent="AppTheme">
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:layout_marginStart">@dimen/horizontalMargin</item>
        <item name="android:layout_marginTop">@dimen/verticalMargin</item>
        <item name="android:layout_marginBottom">@dimen/verticalMargin</item>
    </style>

    <style name="ImageViewCountrySelectedIcon" parent="AppTheme">
        <item name="android:src">@drawable/ic_check</item>
        <item name="android:tint">@color/colorPrimary</item>
        <item name="android:layout_marginStart">@dimen/horizontalMargin</item>
        <item name="android:layout_marginEnd">@dimen/horizontalMargin</item>
        <item name="android:layout_marginTop">@dimen/verticalMargin</item>
        <item name="android:layout_marginBottom">@dimen/verticalMargin</item>
    </style>

    <style name="ButtonLogin" parent="AppTheme">
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:paddingStart">@dimen/horizontalDoubleMargin</item>
        <item name="android:paddingEnd">@dimen/horizontalDoubleMargin</item>
    </style>

    <style name="TextViewUserEmailLabel" parent="AppTheme">
        <item name="android:textSize">@dimen/bigTextSize</item>
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonLogout" parent="AppTheme">
        <item name="backgroundTint">@color/colorLightGray</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingStart">@dimen/horizontalDoubleMargin</item>
        <item name="android:paddingEnd">@dimen/horizontalDoubleMargin</item>
    </style>

</resources>
